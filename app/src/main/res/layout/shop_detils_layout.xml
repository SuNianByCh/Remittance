                android:layout_height="wrap_content"
                android:background="@drawable/bac_white_2"
                android:gravity="center"
                android:padding="@dimen/hw_5_dp"
                android:text="查看物流"
                android:textColor="@color/text_2_color"
                android:textSize="@dimen/text_12_dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_order_detils_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/hw_15_dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bac_white_2"
                android:gravity="center"
                android:padding="@dimen/hw_5_dp"
                android:text="删除订单"
                android:textColor="@color/text_2_color"
                android:textSize="@dimen/text_12_dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_cancel_detils_order"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/hw_15_dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bac_white_2"
                android:gravity="center"
                android:padding="@dimen/hw_5_dp"
                android:text="取消订单"
                android:textColor="@color/text_2_color"
                android:textSize="@dimen/text_12_dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_order_contact_detils_merchant"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/hw_15_dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bac_white_2"
                android:gravity="center"
                android:padding="@dimen/hw_5_dp"
                android:text="联系商家"
                android:textColor="@color/text_2_color"
                android:textSize="@dimen/text_12_dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_order_confirm_detils_receipt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/hw_10_dp"
            android:visibility="gone">

            <TextView
                android:layout_width="70dp"
                android:layout_height="24dp"
                android:background="@color/leak_red"
                android:gravity="center"
                android:text="确认收货"
                android:textColor="@color/white"
                android:textSize="@dimen/text_12_dp" />
        </LinearLayout>

