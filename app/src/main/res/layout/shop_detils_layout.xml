                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom|right"
                android:paddingLeft="@dimen/hw_5_dp"
                android:text="￥90.50"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_14_dp" />
        </LinearLayout>

