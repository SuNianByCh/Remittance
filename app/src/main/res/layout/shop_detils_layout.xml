                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom|right"
                android:text="合计:"
                android:textColor="@color/text_2_color"
                android:textSize="@dimen/text_14_dp" />

            <TextView
