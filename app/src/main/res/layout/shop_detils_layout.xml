    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_shop_detils"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/hw_1_dp"
        android:background="@color/linen" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/hw_15_dp"
        android:paddingRight="@dimen/hw_15_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hw_10_dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="商品金额"
                android:textColor="@color/text_2_color"
                android:textSize="@dimen/text_14_dp" />

            <TextView
                android:id="@+id/tv_shop_detils_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:text="￥70.50"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_14_dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="运费"
                android:textColor="@color/text_1_color"
                android:textSize="@dimen/text_14_dp" />

            <TextView
                android:id="@+id/tv_server_detils_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:text="+￥20.00"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_14_dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_youhui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="折扣优惠"
                android:textColor="@color/text_1_color"
                android:textSize="@dimen/text_14_dp" />

            <TextView
                android:id="@+id/tv_youhui_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:text="￥20.00"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_14_dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyYH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:gravity="center|left"
                android:text="优惠券"
                android:textColor="@color/text_1_color"
                android:textSize="@dimen/text_14_dp" />

            <TextView
                android:id="@+id/tvYHprice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:gravity="center|right"
                android:text=""
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_14_dp" />
        </LinearLayout>

