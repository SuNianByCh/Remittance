<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yaer.remittance.view.CustomTitlebar
        android:id="@+id/ct_security_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_tone"
        app:left_button_image="@drawable/return_left"
        app:right_button_text="下一步"
        app:right_button_textColor="@color/text_1_color"
        app:right_button_textSize="16sp"
        app:title_backgrounds="@color/main_tone"
        app:title_text="添加身份信息"
        app:title_textColor="@color/text_1_color"
        app:title_textSize="18sp" />

    <LinearLayout
        android:id="@+id/lin_set_security"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bottom_border"
                android:orientation="horizontal"
                android:textColorHint="@android:color/darker_gray">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/hw_15_dp"
                    android:paddingLeft="@dimen/hw_10_dp"
                    android:paddingRight="@dimen/hw_10_dp"
                    android:paddingTop="@dimen/hw_15_dp"
                    android:text="真实姓名"
                    android:textColor="@color/my_order" />

                <com.yaer.remittance.view.MyEditText
                    android:id="@+id/et_realName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:drawablePadding="@dimen/hw_10_dp"
                    android:hint="请输入真实姓名"
                    android:paddingLeft="@dimen/hw_10_dp"
                    android:textColor="@color/text_2_color"
                    android:textColorHint="@color/hint_color"
                    android:textSize="@dimen/text_14_dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bottom_border"
                android:orientation="horizontal"
                android:textColorHint="@android:color/darker_gray">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/hw_15_dp"
                    android:paddingLeft="@dimen/hw_10_dp"
                    android:paddingRight="@dimen/hw_10_dp"
                    android:paddingTop="@dimen/hw_15_dp"
                    android:text="证件类型"
                    android:textColor="@color/my_order" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/hw_5_dp"
                    android:padding="@dimen/hw_5_dp"
                    android:text="身份证"
                    android:textColor="@color/hint_color"
                    android:textSize="@dimen/text_14_dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/hw_10_dp"
                    android:drawableRight="@drawable/ic_right"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/hw_10_dp"
                    android:text=""
                    android:textColor="@color/my_order"
                    android:textSize="@dimen/text_14_dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bottom_border"
                android:orientation="horizontal"
                android:textColorHint="@android:color/darker_gray">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/hw_15_dp"
                    android:paddingLeft="@dimen/hw_10_dp"
                    android:paddingRight="@dimen/hw_10_dp"
                    android:paddingTop="@dimen/hw_15_dp"
                    android:text="证件号码"
                    android:textColor="@color/my_order" />

                <com.yaer.remittance.view.MyEditText
                    android:id="@+id/et_idCard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:drawablePadding="@dimen/hw_10_dp"
                    android:hint="请输入证件号"
                    android:inputType="number"
                    android:numeric="integer"
                    android:paddingLeft="@dimen/hw_10_dp"
                    android:textColor="@color/text_2_color"
                    android:textColorHint="@color/hint_color"
                    android:textSize="@dimen/text_14_dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_set_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/lin_update_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_bottom_border"
            android:orientation="horizontal"
            android:textColorHint="@android:color/darker_gray">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/hw_15_dp"
                android:paddingLeft="@dimen/hw_10_dp"
                android:paddingRight="@dimen/hw_10_dp"
                android:paddingTop="@dimen/hw_15_dp"
                android:text="修改密码"
                android:textColor="@color/my_order" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/hw_10_dp"
                android:drawableRight="@drawable/ic_right"
                android:gravity="center|left"
                android:paddingLeft="@dimen/hw_10_dp"
                android:text=""
                android:textColor="@color/my_order"
                android:textSize="@dimen/text_14_dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_forget_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_bottom_border"
            android:orientation="horizontal"
            android:textColorHint="@android:color/darker_gray">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/hw_15_dp"
                android:paddingLeft="@dimen/hw_10_dp"
                android:paddingRight="@dimen/hw_10_dp"
                android:paddingTop="@dimen/hw_15_dp"
                android:text="忘记密码"
                android:textColor="@color/my_order" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/hw_10_dp"
                android:drawableRight="@drawable/ic_right"
                android:gravity="center|left"
                android:paddingLeft="@dimen/hw_10_dp"
                android:text=""
                android:textColor="@color/my_order"
                android:textSize="@dimen/text_14_dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>