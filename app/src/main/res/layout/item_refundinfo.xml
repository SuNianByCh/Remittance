<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_item_refundinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/hw_5_dp"
        android:layout_marginTop="@dimen/hw_5_dp">

        <ImageView
            android:id="@+id/iv_commodity_order_image"
            android:layout_width="@dimen/hw_90_dp"
            android:layout_height="@dimen/hw_72_dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/secces_defaullt"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/llGoodInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/iv_commodity_order_image"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="visible"
            android:weightSum="4">

            <TextView
                android:id="@+id/tv_allorder_gname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:gravity="center|left"
                android:singleLine="true"
                android:text="乾隆玉溪"
                android:textColor="@color/text_1_color"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="@dimen/hw_10_dp">

                <TextView
                    android:id="@+id/shop_refundinfo_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/hw_10_dp"
                    android:text="￥300"
                    android:textColor="@color/text_3_color"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/shop_danwei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/hw_10_dp"
                    android:layout_toRightOf="@+id/shop_refundinfo_money"
                    android:text="/1件"
                    android:textColor="@color/text_3_color"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_refundinfo_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/hw_10_dp"
                    android:text="退款中"
                    android:textColor="@color/text_3_color"
                    android:textSize="10sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/hw_0.5_dp"
        android:background="@color/grey_line_bg" />
</LinearLayout>
