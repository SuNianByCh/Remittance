<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/hw_5_dp"
        android:layout_marginRight="@dimen/hw_5_dp"
        android:background="@drawable/back_layerlist"
        android:orientation="vertical"
        android:padding="@dimen/hw_10_dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/hw_5_dp">

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥10"
                android:textColor="@color/cengse"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_money_buyer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/hw_10_dp"
                android:text="299减10"
                android:textColor="@color/cengse"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_immediately_receive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/hw_20_dp"
                android:background="@drawable/edge_setting"
                android:paddingBottom="@dimen/hw_5_dp"
                android:paddingLeft="@dimen/hw_10_dp"
                android:layout_gravity="center"
                android:paddingRight="@dimen/hw_10_dp"
                android:paddingTop="@dimen/hw_5_dp"
                android:text="立即领取"
                android:textColor="@color/text_1_color"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hw_10_dp">

            <TextView
                android:id="@+id/coupon_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/hw_10_dp"
                android:text="店铺优惠券"
                android:textColor="@color/dancengse"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_coupon_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/hw_10_dp"
            android:layout_marginTop="@dimen/hw_5_dp"
            android:text="2018.11.13-2018.11.13"
            android:textColor="@color/dancengse"
            android:textSize="10sp" />

    </LinearLayout>
</LinearLayout>
