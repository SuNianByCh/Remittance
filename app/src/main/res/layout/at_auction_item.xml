<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:orientation="vertical"
    android:paddingBottom="@dimen/hw_5_dp"
    android:paddingTop="@dimen/hw_5_dp">

    <LinearLayout
        android:id="@+id/rl_my_one_sale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/at_auction_icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/secces_defaullt"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY" />

            <!--    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/hw_5_dp"
                    android:layout_marginTop="-35dp"
                    android:background="@drawable/status_acution"
                    android:gravity="center"
                    android:padding="@dimen/hw_2_dp"
                    android:text="您领先"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/icon"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/hw_20_dp"
                    >

                    <TextView
                        android:id="@+id/at_auction_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="战国狩猎图玉鼎djsdhjkshjhdjh"
                        android:layout_marginRight="@dimen/hw_10_dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:maxLength="10"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_at_auction_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_toRightOf="@+id/icon"
                    android:paddingLeft="5dp"
                    android:text="当前价：¥5200"
                    android:textColor="@color/main_tone" />
                <TextView
                    android:id="@+id/tv_at_auction_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/hw_5_dp"
                    android:paddingRight="@dimen/hw_5_dp"
                    android:text="剩余时间：4分3秒"
                    android:textColor="@color/leak_red"
                    android:textSize="10sp" />

              <!--  <TextView
                    android:id="@+id/tv_at_auction_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/icon"
                    android:paddingLeft="5dp"
                    android:text="领先者：翠荷塘"
                    android:textColor="@color/text_1_color"
                    android:textSize="12sp" />-->
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>