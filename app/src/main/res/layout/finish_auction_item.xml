<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/hw_5_dp"
    android:paddingTop="@dimen/hw_5_dp">

    <LinearLayout
        android:id="@+id/rl_my_one_sale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/at_auction_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_margin="5dp"
                android:background="@drawable/secces_defaullt"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/hw_5_dp"
                android:layout_toRightOf="@+id/icon"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10">

                    <TextView
                        android:id="@+id/at_auction_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="@dimen/hw_10_dp"
                        android:singleLine="true"
                        android:text="战国狩猎图玉鼎"
                        android:textColor="@color/text_1_color"
                        android:textSize="14sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_at_auction_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_toRightOf="@+id/icon"
                    android:paddingLeft="5dp"
                    android:text="结拍价：¥5200"
                    android:textColor="@color/leak_red" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv_finish_auction_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/icon"
                        android:paddingLeft="5dp"
                        android:text="结拍时间：2019-11-22"
                        android:textColor="@color/text_2_color"
                        android:textSize="12sp" />

                    <!--<TextView
                        android:id="@+id/tv_goto_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/hw_5_dp"
                        android:paddingRight="@dimen/hw_5_dp"
                        android:paddingTop="@dimen/hw_2_dp"
                        android:paddingBottom="@dimen/hw_2_dp"
                        android:text="竞拍成功"
                        android:gravity="center"
                        android:background="@drawable/corner_success_view"
                        android:textColor="@color/white"
                        android:textSize="12sp" />-->
                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>