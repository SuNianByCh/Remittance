    <LinearLayout
        android:id="@+id/ll_search_commdity_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/hw_5_dp"
        android:layout_marginRight="@dimen/hw_5_dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/back_layerlist"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_search_commdityimg"
                android:layout_width="match_parent"
                android:layout_height="183dp"
                android:scaleType="centerCrop"
                app:riv_corner_radius_top_left="@dimen/hw_5_dp"
                app:riv_corner_radius_top_right="@dimen/hw_5_dp"
                app:riv_mutate_background="true"
                app:riv_oval="false" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_search_commdity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_4"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="陶瓷玉器"
            android:textColor="#666666"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_search_commdity_gmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginTop="2dp"
                android:text="¥ 99999"
                android:textColor="@color/main_tone"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/hw_10_dp">

                <ImageView
                    android:id="@+id/iv_vitalit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/vitalityvalue" />

                <TextView
                    android:id="@+id/tv_shopping_vitalityvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_vitalit"
                    android:text="120"
                    android:textColor="@color/text_2_color"
                    android:textSize="12sp" />
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>

