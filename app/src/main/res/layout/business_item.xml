<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_business"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/hw_10_dp"
        android:layout_marginRight="@dimen/hw_10_dp"
        android:orientation="vertical">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_business_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hw_160_dp"
            android:paddingTop="@dimen/hw_8_dp"
            android:scaleType="centerCrop"
            app:riv_corner_radius_top_left="@dimen/dp_10"
            app:riv_corner_radius_top_right="@dimen/dp_10"
            app:riv_mutate_background="true"
            app:riv_oval="false" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:padding="@dimen/hw_5_dp">

            <com.liji.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/civ_business_uiconImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/user_settings"
                app:circle_border_color="@color/grey_line_bg"
                app:circle_border_width="@dimen/hw_0.5_dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/hw_6_dp"
                android:layout_marginTop="@dimen/hw_10_dp"
                android:layout_toRightOf="@+id/civ_business_uiconImage"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_shangpinname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商家名称"
                    android:textColor="@color/text_1_color"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收藏家"
                        android:textColor="@color/main_tones"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_sfans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/hw_15_dp"
                android:background="@drawable/shap_attention_true"
                android:paddingBottom="@dimen/hw_5_dp"
                android:paddingLeft="@dimen/hw_10_dp"
                android:paddingRight="@dimen/hw_10_dp"
                android:paddingTop="@dimen/hw_5_dp"
                android:text="+关注"
                android:textColor="@color/main_tone"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>

