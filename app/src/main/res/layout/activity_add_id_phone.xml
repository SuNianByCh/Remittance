<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yaer.remittance.view.CustomTitlebar
        android:id="@+id/ct_add_id_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_tone"
        app:left_button_image="@drawable/return_left"
        app:title_backgrounds="@color/main_tone"
        app:title_text="添加银行卡"
        app:title_textColor="@color/text_1_color"
        app:title_textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/hw_20_dp">

        <ImageView
            android:id="@+id/iv_bankimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/hw_10_dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_realName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工商银行"
                android:textColor="@color/text_1_color"
                android:textSize="@dimen/text_14_dp" />

            <TextView
                android:id="@+id/tv_cardname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/hw_10_dp"
                android:text="储蓄卡"
                android:textColor="@color/text_3_color"
                android:textSize="@dimen/text_12_dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hw_10_dp"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/hw_10_dp"
        android:paddingTop="@dimen/hw_10_dp">

        <TextView
            style="@style/select_report_tv"
            android:layout_marginLeft="@dimen/hw_10_dp"
            android:text="身份证"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_add_submit_id"
            style="@style/select_report_tv"
            android:layout_width="match_parent"
            android:background="@null"
            android:hint="请输入持卡人身份证号"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_amount_of_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/hw_20_dp"
        android:layout_marginTop="@dimen/hw_1_dp"
        android:background="@android:color/white"
        android:paddingBottom="@dimen/hw_10_dp"
        android:paddingLeft="@dimen/hw_10_dp"
        android:paddingTop="@dimen/hw_10_dp">

        <TextView
            style="@style/select_report_tv"
            android:layout_marginLeft="@dimen/hw_10_dp"
            android:text="手机号"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_add_submit_phone"
            style="@style/select_report_tv"
            android:layout_width="match_parent"
            android:background="@null"
            android:hint="请输入银行预留手机号"
            android:inputType="number|numberDecimal"
            android:maxLength="19"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_bank_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/corner_view"
        android:text="下一步"
        android:textColor="@color/white" />
</LinearLayout>