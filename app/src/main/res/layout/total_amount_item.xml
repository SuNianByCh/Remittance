<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/hw_1_dp"
    android:background="@color/background_color"
    android:orientation="vertical"
    android:paddingBottom="@dimen/hw_3_dp">

    <RelativeLayout
        android:id="@+id/rl_my_collect_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:gravity="center"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/hw_10_dp">

            <TextView
                android:id="@+id/tv_detailed_recharge_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现"
                android:textColor="@color/text_1_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_detailed_recharge_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/hw_10_dp"
                android:text="2018-10-11 12：00:00"
                android:textColor="@color/text_2_color"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_detailed_recharge_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="+20"
            android:textColor="@color/main_tone"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>