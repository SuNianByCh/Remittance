<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beijing"
    android:orientation="vertical">

    <com.yaer.remittance.view.CustomTitlebar
        android:id="@+id/ct_extension_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_tone"
        app:left_button_image="@drawable/return_left"
        app:title_backgrounds="@color/main_tone"
        app:title_text="购买服务"
        app:title_textColor="@color/text_1_color"
        app:title_textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/hw_10_dp">

        <TextView
            android:id="@+id/tv_extension_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="测试服务"
            android:textColor="@color/main_tone"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_extension_edesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/hw_5_dp"
            android:text="测试描述"
            android:textColor="@color/text_1_color"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/linen" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_length_purchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_bottom_border"
            android:textColorHint="@android:color/darker_gray">

            <TextView
                android:id="@+id/tv_purchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/hw_25_dp"
                android:hint="请选择"
                android:textColor="@color/black" />

            <TextView
                style="@style/TextBottomTheme"
                android:text="购买时长"
                android:textColor="@color/my_order" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_bottom_border"
            android:paddingBottom="@dimen/hw_15_dp"
            android:paddingLeft="@dimen/hw_10_dp"
            android:paddingTop="@dimen/hw_15_dp"
            android:textColorHint="@android:color/darker_gray">

            <TextView
                android:id="@+id/term_validity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/hw_25_dp"
                android:text="1-21至2-21"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="有效期"
                android:textColor="@color/my_order"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_payment_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_bottom_border"
            android:paddingBottom="@dimen/hw_15_dp"
            android:paddingLeft="@dimen/hw_10_dp"
            android:paddingTop="@dimen/hw_15_dp"
            android:textColorHint="@android:color/darker_gray">

            <TextView
                android:id="@+id/tv_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/hw_25_dp"
                android:text="￥100"
                android:textColor="@color/main_tone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="支付方式"
                android:textColor="@color/my_order"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_extension_paoy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/hw_10_dp"
        android:layout_marginRight="@dimen/hw_10_dp"
        android:layout_marginTop="@dimen/hw_10_dp"
        android:background="@drawable/extension_angle_button"
        android:gravity="center"
        android:padding="@dimen/hw_10_dp"
        android:text="立即购买"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>