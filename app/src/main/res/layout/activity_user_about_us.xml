<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_background"
    android:orientation="vertical">
    <com.yaer.remittance.view.CustomTitlebar
        android:id="@+id/ct_about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_tone"
        app:left_button_image="@drawable/return_left"
        app:right_button_textColor="@color/text_1_color"
        app:right_button_textSize="16sp"
        app:title_backgrounds="@color/main_tone"
        app:title_text="关于我们"
        app:title_textColor="@color/text_1_color"
        app:title_textSize="18sp" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="75dp"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="@dimen/hw_100_dp"
            android:layout_height="@dimen/hw_100_dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/hw_20_dp"
            android:text="@string/about_product_name"
            android:textColor="@color/text_1_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/version_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/hw_6_dp"
            android:textColor="@color/text_2_color"
            android:text="Android版本1.0"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/hw_20_dp"
            android:text="山东拍品汇文化发展有限公司"
            android:textColor="#bcbcbc"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/version_update_hint_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="@dimen/hw_25_dp"
            android:background="@drawable/shap_attention_false"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="已是最新版本"
            android:textColor="@color/text_2_color"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>