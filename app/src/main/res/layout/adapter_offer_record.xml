<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.liji.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/civ_offer_portrait"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/hw_5_dp"
        android:src="@drawable/user_settings"
        app:circle_border_color="@color/white"
        app:circle_border_width="1dp" />

    <RelativeLayout
        android:id="@+id/ll_grid_receicer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/hw_5_dp"
        android:layout_toRightOf="@+id/civ_offer_portrait"
        android:padding="@dimen/hw_8_dp">

        <TextView
            android:id="@+id/tv_offer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="8"
            android:singleLine="true"
            android:text="用户名称"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_offer_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/hw_10_dp"
            android:layout_toRightOf="@+id/tv_offer_name"
            android:ellipsize="end"
            android:paddingLeft="@dimen/hw_5_dp"
            android:paddingRight="@dimen/hw_5_dp"
            android:paddingTop="@dimen/hw_3_dp"
            android:paddingBottom="@dimen/hw_3_dp"
            android:gravity="center"
            android:maxEms="8"
            android:singleLine="true"
            android:text="领先"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_offer_name"
            android:layout_marginTop="@dimen/hw_5_dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvcj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出价"
                android:textColor="@color/text_2_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_offer_gmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/hw_10_dp"
                android:layout_toRightOf="@+id/tvcj"
                android:text="￥3999"
                android:textColor="@color/text_2_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_offer_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="12-24-20:58:50"
                android:textColor="@color/text_2_color"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_grid_receicer"
        android:background="@color/linen" />
</RelativeLayout>