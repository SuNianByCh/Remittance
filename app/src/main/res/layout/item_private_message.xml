<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_background"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_marginLeft="@dimen/hw_5_dp"
    android:layout_marginRight="@dimen/hw_5_dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="@dimen/hw_5_dp">

        <com.liji.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/civ_touxiang4"
            android:layout_width="@dimen/hw_60_dp"
            android:layout_height="@dimen/hw_60_dp"
            android:src="@drawable/user_settings"
            app:circle_border_color="@color/grey_line_bg"
            app:circle_border_width="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/hw_10_dp"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/civ_touxiang4"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="古玩之家"
                    android:textColor="@color/text_1_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/btn_attention_closeAttention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:focusable="false"
                    android:paddingLeft="8dp"
                    android:paddingRight="@dimen/hw_10_dp"
                    android:text="2018-9-12 12:22:00"
                    android:textColor="@color/text_2_color"
                    android:textSize="10sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/hw_5_dp"
                android:layout_marginTop="@dimen/hw_5_dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/hw_5_dp"
                    android:ellipsize="end"
                    android:maxEms="12"
                    android:singleLine="true"
                    android:text="您好，我要咨询一个问题，您看有时间吗？"
                    android:textColor="@color/text_3_color"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

