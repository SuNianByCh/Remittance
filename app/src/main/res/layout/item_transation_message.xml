<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/hw_5_dp"
    android:layout_marginTop="@dimen/hw_5_dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/hw_10_dp"
        android:layout_marginRight="@dimen/hw_10_dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_mtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/hw_5_dp"
            android:background="@drawable/corner_home_view"
            android:text="2018-10-12 12:00"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_layerlist"
            android:layout_marginTop="@dimen/hw_8_dp"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单即将关闭"
                android:textColor="@color/text_1_color"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/hw_5_dp">
                <ImageView
                    android:id="@+id/civ_touxiang4"
                    android:background="@drawable/secces_defaullt"
                    android:layout_width="@dimen/hw_60_dp"
                    android:layout_height="@dimen/hw_60_dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_mcontent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/hw_8_dp"
                        android:maxLines="3"
                        android:text="德化白瓷茶盘家用德化白瓷茶盘家用德化白瓷茶盘家用德化白德化白瓷茶盘家用"
                        android:textColor="@color/text_2_color"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/hw_8_dp"
                        android:layout_marginTop="@dimen/hw_10_dp"
                        android:maxLines="3"
                        android:text="因您超时未付款，系统即将忍痛关闭你的订单"
                        android:textColor="@color/text_2_color"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

