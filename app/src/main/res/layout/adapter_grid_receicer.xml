<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_grid_receicer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/hw_2_dp"
        android:layout_marginRight="@dimen/hw_2_dp"
        android:background="@drawable/back_layerlist"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/hw_5_dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/iv_grid_image"
                    android:layout_width="163dp"
                    android:layout_height="163dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/imagedetail_defaullt"
                    app:riv_corner_radius_bottom_left="@dimen/dp_10"
                    app:riv_corner_radius_bottom_right="@dimen/dp_10"
                    app:riv_corner_radius_top_left="@dimen/dp_10"
                    app:riv_corner_radius_top_right="@dimen/dp_10"
                    app:riv_mutate_background="true"
                    app:riv_oval="false" />

                <TextView
                    android:id="@+id/tv_auction_identification"
                    android:layout_width="@dimen/hw_30_dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/hw_10_dp"
                    android:background="@drawable/shopauctiontype"
                    android:gravity="center" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tv_grid_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/hw_10_dp"
                    android:layout_marginTop="6dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxEms="8"
                    android:singleLine="true"
                    android:text="陶瓷玉器"
                    android:textColor="@color/text_2_color"
                    android:textSize="12sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/hw_10_dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_ddqj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当前价:"
                        android:textColor="#666666"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_grid_gmoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/hw_10_dp"
                        android:layout_toRightOf="@+id/tv_ddqj"
                        android:text="99999"
                        android:textColor="#bda75b"
                        android:textSize="12sp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/hw_10_dp">

                    <ImageView
                        android:id="@+id/iv_vitalit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/vitalityvalue" />

                    <TextView
                        android:id="@+id/tv_vitalityvalue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_vitalit"
                        android:text="120"
                        android:textColor="@color/text_2_color"
                        android:textSize="10sp" />
                </RelativeLayout>

            </RelativeLayout>

            <!--
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/hw_5_dp"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="当前价:"
                                android:textColor="@color/text_2_color"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_grid_gmoney"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/hw_5_dp"
                                android:text="￥3999"
                                android:textColor="@color/main_tone"
                                android:textSize="12sp" />
                        </LinearLayout>
            -->
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>