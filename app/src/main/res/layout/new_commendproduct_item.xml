<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_new_comment_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/hw_10_dp"
        android:layout_marginLeft="@dimen/hw_10_dp"
        android:layout_marginRight="@dimen/hw_5_dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/riv_new_commend_image"
                android:layout_width="163dp"
                android:layout_height="163dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/imagedetail_defaullt"
                app:riv_corner_radius_bottom_left="@dimen/dp_10"
                app:riv_corner_radius_bottom_right="@dimen/dp_10"
                app:riv_corner_radius_top_left="@dimen/dp_10"
                app:riv_corner_radius_top_right="@dimen/dp_10"
                app:riv_mutate_background="true"
                app:riv_oval="false" />

            <TextView
                android:layout_width="@dimen/hw_30_dp"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/hw_10_dp"
                android:background="@drawable/shopauctiontype"
                android:gravity="center" />
        </RelativeLayout>

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="陶瓷玉器"
            android:textColor="#666666"
            android:textSize="10sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_ddqj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前价:"
                    android:textColor="#666666"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_home_new_gmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/hw_10_dp"
                    android:layout_toRightOf="@+id/tv_ddqj"
                    android:text="99999"
                    android:textColor="#bda75b"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/hw_10_dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_vitalit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/vitalityvalue" />

                <TextView
                    android:id="@+id/tv_vitalityvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_vitalit"
                    android:text="120"
                    android:textColor="@color/text_2_color"
                    android:textSize="10sp" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>

