<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/linen"
    android:orientation="vertical"
    android:showDividers="middle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/hw_10_dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_forward_delete"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/gray_fist"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/text_2_color"
            android:textSize="18sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/hw_10_dp" />

        <TextView
            android:id="@+id/tv_forward_Cancel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/gray_canle"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_2_color"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>