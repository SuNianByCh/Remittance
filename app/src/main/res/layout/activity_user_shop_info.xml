<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.yaer.remittance.view.CustomTitlebar
        android:id="@+id/ct_shop_linformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_tone"
        app:left_button_image="@drawable/return_left"
        app:title_backgrounds="@color/main_tone"
        app:title_text="店铺资料"
        app:title_textColor="@color/text_1_color"
        app:title_textSize="18sp" />
    <RelativeLayout
        android:id="@+id/rl_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/hw_10_dp">

    <LinearLayout
        android:id="@+id/ll_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hw_10_dp"
        android:orientation="vertical">

        <com.liji.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/shop_mCircleImageView"
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:layout_gravity="center"
            android:src="@drawable/user_settings"
            app:circle_border_color="@color/white"
            app:circle_border_width="1dp" />

        <TextView
            android:id="@+id/tv_shop_leven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-15dp"
            android:background="@drawable/corner_view"
            android:text="LV3"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/hw_20_dp"
        android:layout_marginTop="@dimen/hw_20_dp"
        android:layout_toRightOf="@+id/ll_tx"
        android:padding="@dimen/hw_5_dp">

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拍品汇"
            android:textColor="@color/text_1_color"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_name"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/hw_5_dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_shop_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="收藏家"
                android:textColor="@color/text_2_color"
                android:textSize="@dimen/text_12_dp" />

        </LinearLayout>
    </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_bottom_border"
            android:textColorHint="@android:color/darker_gray">

            <TextView
                android:id="@+id/shop_nicename"
                style="@style/TextnoBottomTheme"
                android:layout_marginLeft="@dimen/hw_5_dp"
                android:text="@string/shop_desc"
                android:textColor="@color/my_order" />

            <TextView
                android:id="@+id/tv_shopdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/hw_20_dp"
                android:drawablePadding="@dimen/hw_5_dp"
                android:gravity="center"
                android:padding="@dimen/hw_15_dp"
                android:text="拍品汇"
                android:layout_toRightOf="@+id/shop_nicename"
                android:textColor="@color/text_2_color"
                android:textSize="@dimen/text_12_dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_bottom_border"
            android:textColorHint="@android:color/darker_gray">

            <TextView
                android:id="@+id/authentication_type"
                style="@style/TextnoBottomTheme"
                android:layout_marginLeft="@dimen/hw_5_dp"
                android:text="@string/authentication_type"
                android:textColor="@color/my_order" />

            <TextView
                android:id="@+id/tv_authentication_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/hw_20_dp"
                android:drawablePadding="@dimen/hw_5_dp"
                android:ellipsize="end"
                android:gravity="center"
                android:text="个人认证"
                android:maxEms="18"
                android:padding="@dimen/hw_15_dp"
                android:layout_toRightOf="@+id/authentication_type"
                android:singleLine="true"
                android:textColor="@color/text_2_color"
                android:textSize="@dimen/text_12_dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_bottom_border"
            android:textColorHint="@android:color/darker_gray">

            <TextView
                android:id="@+id/tv_where_region"
                style="@style/TextnoBottomTheme"
                android:layout_marginLeft="@dimen/hw_5_dp"
                android:text="@string/shop_where_region"
                android:textColor="@color/my_order" />

            <TextView
                android:id="@+id/tv_shop_where_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/hw_20_dp"
                android:drawablePadding="@dimen/hw_5_dp"
                android:gravity="center"
                android:layout_toRightOf="@+id/tv_where_region"
                android:padding="@dimen/hw_15_dp"
                android:text="山东济南"
                android:textColor="@color/text_2_color"
                android:textSize="@dimen/text_12_dp" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>