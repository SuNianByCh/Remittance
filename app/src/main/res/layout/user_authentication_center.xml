        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/hw_15_dp"
            android:layout_marginRight="@dimen/hw_15_dp"
            android:background="@drawable/selector_bottom_border"
            android:textColorHint="@color/view_xiahuaxie" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_personal_identification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/hw_10_dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/hw_20_dp"
                    android:background="@drawable/personal_authentication"
                    android:padding="@dimen/hw_5_dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/hw_10_dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/hw_2_dp"
                        android:text="个人认证"
                        android:textColor="@color/text_1_color"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/hw_2_dp"
                        android:text="适用于个体经营户"
                        android:textColor="@color/text_3_color"
                        android:textSize="9sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/hw_15_dp"
                android:layout_marginRight="@dimen/hw_15_dp"
                android:background="@drawable/selector_bottom_border"
                android:textColorHint="@color/view_xiahuaxie" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_company_identification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/hw_10_dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/hw_20_dp"
                        android:background="@drawable/enterprise_authentication"
                        android:padding="@dimen/hw_5_dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/hw_10_dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/hw_2_dp"
                            android:text="企业认证"
                            android:textColor="@color/text_1_color"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/hw_2_dp"
                            android:text="适用于有营业执照的企业/商户"
                            android:textColor="@color/text_3_color"
                            android:textSize="9sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/hw_15_dp"
                    android:layout_marginRight="@dimen/hw_15_dp"
                    android:background="@drawable/selector_bottom_border"
                    android:textColorHint="@color/view_xiahuaxie" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
