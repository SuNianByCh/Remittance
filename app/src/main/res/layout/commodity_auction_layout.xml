<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ly_close"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="@color/text_1_color"
        android:orientation="vertical" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:padding="@dimen/hw_10_dp"
            android:text="请选择发布类型" />

        <TextView
            android:id="@+id/btn_camera_pop_commodity"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/gray_fist"
            android:gravity="center"
            android:text="商品"
            android:textColor="@color/text_2_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/btn_camera_pop_auction"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/gray_two"
            android:gravity="center"
            android:text="拍品"
            android:textColor="@color/text_2_color"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/hw_10_dp" />

        <TextView
            android:id="@+id/btn_camera_pop_cancel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/gray_canle"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_2_color"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>
