<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_search_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/hw_5_dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/hw_5_dp">

            <com.liji.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/civ_search_shop_tx"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/user_settings"
                app:circle_border_color="@color/white"
                app:circle_border_width="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/hw_10_dp"
                android:layout_toRightOf="@+id/civ_search_shop_tx"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_search_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商家名称"
                    android:textColor="@color/text_1_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_search_shop_slabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/hw_4_dp"
                    android:text="收藏家"
                    android:textColor="@color/main_tone"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_search_shop_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="粉丝：37"
                        android:textColor="@color/text_3_color"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/hw_10_dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_search_shop_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shap_attention_true"
                    android:paddingBottom="@dimen/hw_5_dp"
                    android:paddingLeft="@dimen/hw_10_dp"
                    android:paddingRight="@dimen/hw_10_dp"
                    android:paddingTop="@dimen/hw_5_dp"
                    android:text="+关注"
                    android:textColor="@color/main_tone"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/linen"/>
    </LinearLayout>

</LinearLayout>

