<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <com.yaer.remittance.view.CustomTitlebar
        android:id="@+id/ct_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_tone"
        app:left_button_image="@drawable/return_left"
        app:right_button_text="提交"
        app:title_backgrounds="@color/main_tone"
        app:title_text="举报"
        app:title_textColor="@color/text_1_color"
        app:title_textSize="18sp" />
    <!-- 头部 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background_color"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:text="请选择举报原因"
        android:textColor="@color/text_color_grey"
        android:textSize="13sp" />

    <RelativeLayout
        android:id="@+id/fack_commodities_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/fack_commodities_tv"
            style="@style/select_report_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="假冒伪劣商品"
            android:textColor="#000000"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/fack_commodities_cb"
            style="@style/CheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="5dp"
        android:background="@color/province_line_border" />

    <RelativeLayout
        android:id="@+id/vary_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/vary_tv"
            style="@style/select_report_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="违背法律法规"
            android:textColor="#000000"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/vary_cb"
            style="@style/CheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="5dp"
        android:background="@color/province_line_border" />

    <RelativeLayout
        android:id="@+id/rough_stuff_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/rough_stuff_tv"
            style="@style/select_report_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暴力色情"
            android:textColor="#000000"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/rough_stuff_cb"
            style="@style/CheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="5dp"
        android:background="@color/province_line_border" />

    <RelativeLayout
        android:id="@+id/defraud_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/defraud_tv"
            style="@style/select_report_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="诈骗和虚假消息"
            android:textColor="#000000"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/defraud_cb"
            style="@style/CheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="5dp"
        android:background="@color/province_line_border" />

    <RelativeLayout
        android:id="@+id/pyramid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/pyramid_tv"
            style="@style/select_report_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="非法传销"
            android:textColor="#000000"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/pyramid_cb"
            style="@style/CheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="5dp"
        android:background="@color/province_line_border" />

    <RelativeLayout
        android:id="@+id/trumpery_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/trumpery_tv"
            style="@style/select_report_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="该商品/店铺涉嫌虚假交易"
            android:textColor="#000000"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/trumpery_cb"
            style="@style/CheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="5dp"
        android:background="@color/province_line_border" />

    <RelativeLayout
        android:id="@+id/other_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/other_tv"
            style="@style/select_report_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他"
            android:textColor="#000000"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/other_cb"
            style="@style/CheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:background="@color/province_line_border" />

</LinearLayout>
