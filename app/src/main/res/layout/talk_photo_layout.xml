<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ly_close"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="@color/text_1_color"
        android:orientation="vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/hw_10_dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btn_camera_pop_camera"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/gray_fist"
            android:gravity="center"
            android:text="相机"
            android:textColor="@color/text_2_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/btn_camera_pop_album"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/gray_two"
            android:gravity="center"
            android:text="相册"
            android:textColor="@color/text_2_color"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/hw_10_dp" />

        <TextView
            android:id="@+id/btn_camera_pop_cancel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/gray_canle"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_2_color"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>
