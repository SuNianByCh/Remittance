<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:paddingLeft="10dp"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image"
            android:paddingTop="15dp"
            android:paddingLeft="5dp"
            android:text="商品名称"
            />
        <EditText
            android:id="@+id/user_publish_assess"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_toRightOf="@+id/image"
            android:background="@android:color/white"
            android:ems="10"
            android:textSize="14sp"
            android:layout_below="@+id/name"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:hint="说两句吧...." />

        <TextView
            android:id="@+id/user_publish_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="0/50"
            android:layout_below="@+id/image"
            android:layout_marginRight="10dp"
            android:textColor="@android:color/darker_gray" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            android:id="@+id/tv_manner"
            style="@style/content_text_style"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="14dp"
            android:text="描述相符：" />
        <RatingBar
            android:id="@+id/ratingBar_match"
            style="@style/CustomRatingStyle"
            android:layout_toRightOf="@+id/tv_manner"
            />
        <TextView
            android:id="@+id/tv_scnner_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ratingBar_match"
            android:layout_marginLeft="10dp"
            android:text="0分"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:padding="10dp">
        <ImageView
            android:id="@+id/choose_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:paddingLeft="10dp"
            android:src="@drawable/choose_image"/>
        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:paddingLeft="10dp"
            android:scaleType="fitXY"
            android:layout_toRightOf="@+id/choose_image"/>
    </RelativeLayout>
</LinearLayout>
