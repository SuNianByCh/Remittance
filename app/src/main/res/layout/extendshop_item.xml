<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/hw_10_dp">
        <TextView
            android:id="@+id/tv_extenshop_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推广位"
            android:textColor="@color/text_1_color" />

        <TextView
            android:id="@+id/expanded_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_extenshop_item"
            android:text="2019-1-08" />

        <TextView
            android:id="@+id/expanded_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="￥3" />
    </RelativeLayout>
</LinearLayout>

