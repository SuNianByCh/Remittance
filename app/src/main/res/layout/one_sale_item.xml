<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/hw_2_dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rl_my_one_sale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/ll_one_sale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_one_saleicon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:background="@drawable/secces_defaullt"
                android:layout_margin="5dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/hw_5_dp"
                android:layout_toRightOf="@+id/icon"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/on_sale_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/icon"
                    android:lines="1"
                    android:textIsSelectable="true"
                    android:maxEms="12"
                    android:padding="@dimen/hw_5_dp"
                    android:ellipsize="end"
                    android:paddingLeft="5dp"
                    android:text="战国狩猎图玉鼎"
                    android:textColor="@color/text_2_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_sale_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/hw_5_dp"
                    android:layout_toRightOf="@+id/icon"
                    android:paddingLeft="5dp"
                    android:text="价格：¥5200"
                    android:textColor="@color/main_tone"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_one_sale_gisauction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/hw_10_dp"
                    android:paddingLeft="5dp"
                    android:text="商品还是拍品"
                    android:textColor="@color/text_2_color"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/hw_10_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_one_sale_gnumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="库存：100"
                        android:textColor="@color/text_2_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_one_sale_gtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/hw_10_dp"
                        android:paddingLeft="5dp"
                        android:text="2018-05-19"
                        android:textColor="@color/text_2_color"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/hw_10_dp"
            android:layout_marginTop="@dimen/hw_5_dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sale_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shap_attention_true"
                android:gravity="center"
                android:paddingBottom="@dimen/hw_5_dp"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/hw_5_dp"
                android:text="编辑"
                android:textColor="@color/main_tone"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_sale_lower_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/hw_10_dp"
                android:background="@drawable/shap_attention_true"
                android:gravity="center"
                android:paddingBottom="@dimen/hw_5_dp"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/hw_5_dp"
                android:text="下架"
                android:textColor="@color/main_tone"
                android:textSize="12sp" />

          <!--  <TextView
                android:id="@+id/tv_sale_detele"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/hw_10_dp"
                android:layout_weight="1"
                android:background="@drawable/shap_attention_true"
                android:gravity="center"
                android:paddingBottom="@dimen/hw_5_dp"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/hw_5_dp"
                android:text="删除"
                android:textColor="@color/main_tone"
                android:textSize="12sp" />-->
        </LinearLayout>
    </LinearLayout>

</LinearLayout>