    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--错位背景-->
    <style name="bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="empty_img">
        <item name="android:layout_width">@dimen/def_height</item>
        <item name="android:layout_height">@dimen/def_height</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <!-- 带下边框的背景 -->
    <style name="TextBottomTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <!-- <item name="android:background">@drawable/selector_bottom_border</item>-->
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:drawableRight">@drawable/ic_right</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">8dp</item>
    </style>
    <!-- 不带下边框的背景 -->
    <style name="TextnoBottomTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <!-- <item name="android:background">@drawable/selector_bottom_border</item>-->
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <!--加载loding-->
    <style name="TransparentDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <!-- 自定义Loading Dialog -->
    <style name="loading_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="tv_style1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- 筛选 -->
    <style name="CheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>

    <style name="tv_style2">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="greyTextStyleSmall">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/grey_text_color_normal</item>
    </style>

    <style name="whiteTextStyle">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="blackTextStyleSmall">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="blackTextStyle">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="greyTextStyleSmaller">
        <item name="android:textSize">@dimen/font_smaller</item>
        <item name="android:textColor">@color/grey_text_color_normal</item>
    </style>
    <!--全屏背景半透明 dialog-->
    <style name="transparentBgDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:finishOnCloseSystemDialogs">true</item>
        <item name="android:finishOnTaskLaunch">true</item>
        <item name="android:background">@color/black</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--弹框dialog-->
    <style name="commoditydDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:finishOnCloseSystemDialogs">true</item>
        <item name="android:finishOnTaskLaunch">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--快速启动 -->
    <style name="AppTheme.NoActionBarAndTitle" parent="FullScreenTheme">
        <item name="android:windowBackground">@drawable/layout_list_start_pic</item>
    </style>
    <!--全屏-->
    <style name="FullScreenTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="loadingDialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item> <!-- 设置自定义布局的背景透明 -->
        <item name="android:windowBackground">@android:color/transparent
        </item>  <!-- 设置window背景透明，也就是去边框 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>

    </style>

    <!-- 筛选的支付textview -->
    <style name="select_report_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/edittextcolor</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- 筛选的支付textview -->
    <style name="select_screen_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/view_xiahuaxie</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- RadioButton Style -->
    <style name="RadioButtonStyles">
        <item name="android:button">@drawable/btn_default_radiobutton</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>
    <!-- 仿IOS的dialog -->
    <style name="UIAlertViewStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="content_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <!--评价星-->
    <style name="CustomRatingStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:progressDrawable">@drawable/rating_selector</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">0</item>
        <item name="android:stepSize">2</item>
        <item name="android:minHeight">20dp</item>
    </style>

    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@animator/anim_in</item>
        <item name="android:windowExitAnimation">@animator/anim_out</item>
    </style>

    <style name="NewCollect">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:layout_height">47dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@animator/photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@animator/photo_dialog_out_anim</item>
    </style>

    <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/photo_choose_bg</item>
    </style>
</resources>
